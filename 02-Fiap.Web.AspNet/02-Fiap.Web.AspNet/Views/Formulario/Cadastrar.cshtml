@model Pessoa

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

@if(Model != null)
{
    <p>@Model.Email</p>
}

<form action="/Formulario/Cadastrar" method="post">
    <div class="form-group">
        <label for="id-name">Name: </label>
        <input type="text" name="name" id="id-name" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="id-data-nascimento">Data Nascimento: </label>
        <input type="date" name="dataNascimento" id="id-data-nascimento" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="id-email">Email: </label>
        <input type="email" name="email" id="id-email" class="form-control" />
    </div>
    <input type="submit" value="Enviar" class="btn btn-dark"  />
</form>

<p>@TempData["message"]</p>

<p>
    @ViewData["name"]
</p>

<p>
    @if (ViewData["name"] != null)
    {
        @ViewData["dataNascimento"];
    }

</p>

<p>
    @ViewData["email"]
</p>
<p>
    @ViewBag.usuario
</p>

